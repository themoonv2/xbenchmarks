---
import Layout from "../../../../layouts/Layout.astro";
import cpus from "../../../../data/cpus.json";
import { getBrand, getSeries, slugify } from "../../../../utils/data-helpers";

export async function getStaticPaths() {
    const paths = [];
    const brands = [...new Set(cpus.map((c) => getBrand(c.name)))];

    brands.forEach((brand) => {
        const brandSlug = slugify(brand);
        const brandCpus = cpus.filter((c) => getBrand(c.name) === brand);
        const seriesList = [
            ...new Set(brandCpus.map((c) => getSeries(c.name))),
        ];

        seriesList.forEach((series) => {
            paths.push({
                params: {
                    brand: brandSlug,
                    series: slugify(series),
                },
                props: {
                    brandName: brand,
                    seriesName: series,
                    cpus: brandCpus.filter((c) => getSeries(c.name) === series),
                },
            });
        });
    });

    return paths;
}

const { brandName, seriesName, cpus: seriesCpus } = Astro.props;
const { brand, series } = Astro.params;
---

<Layout title={`${brandName} ${seriesName} Processors`}>
    <h1>{brandName} {seriesName} Series</h1>
    <p>Available models in this series.</p>

    <div class="list-container">
        {
            seriesCpus.map((cpu) => {
                const modelSlug = cpu.slug || slugify(cpu.name);
                return (
                    <div class="item-row">
                        <div class="item-info">
                            <h3>
                                <a
                                    href={`${import.meta.env.BASE_URL}/cpus/${brand}/${series}/${modelSlug}`}
                                >
                                    {cpu.name}
                                </a>
                            </h3>
                            <div class="specs-preview">
                                <span>
                                    Score:{" "}
                                    {cpu.scores
                                        ? cpu.scores["NanoReview Final Score"]
                                        : "N/A"}
                                </span>
                                {cpu.specs["Total Cores"] && (
                                    <span>
                                        Cores: {cpu.specs["Total Cores"]}
                                    </span>
                                )}
                            </div>
                        </div>
                        <div class="item-action">
                            {cpu.price && (
                                <span class="price">${cpu.price}</span>
                            )}
                            <a
                                href={`${import.meta.env.BASE_URL}/cpus/${brand}/${series}/${modelSlug}`}
                                class="btn"
                            >
                                View Specs
                            </a>
                        </div>
                    </div>
                );
            })
        }
    </div>
</Layout>

<style>
    .list-container {
        display: flex;
        flex-direction: column;
        gap: var(--space-3);
        margin-top: var(--space-6);
    }

    .item-row {
        border: var(--border-primary);
        padding: var(--space-4);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    @media (max-width: 600px) {
        .item-row {
            flex-direction: column;
            align-items: flex-start;
            gap: var(--space-4);
        }
        .item-action {
            width: 100%;
            display: flex;
            justify-content: space-between;
        }
    }

    .item-info h3 {
        font-size: var(--text-lg);
        margin-bottom: var(--space-2);
    }

    .item-info h3 a {
        text-decoration: none;
        color: var(--color-text);
    }

    .specs-preview {
        font-size: var(--text-sm);
        color: var(--color-text-muted);
        display: flex;
        gap: var(--space-4);
    }

    .item-action {
        display: flex;
        align-items: center;
        gap: var(--space-4);
    }

    .price {
        font-weight: 700;
    }
</style>
