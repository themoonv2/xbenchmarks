---
import Layout from '../layouts/Layout.astro';

// Handle /sitemap.xml redirect to /sitemap-index.xml
if (Astro.url.pathname === '/sitemap.xml/') {
	return Astro.redirect('/sitemap-index.xml/');
}

const title = '404 - Page Not Found';
const description = 'The page you are looking for does not exist.';
---

<Layout title={title}>
	<div style="text-align: center; padding: 4rem 2rem;">
		<h1 style="font-size: 4rem; margin-bottom: 1rem;">404</h1>
		<p style="font-size: 1.25rem; margin-bottom: 2rem; color: var(--color-muted);">
			The page you are looking for does not exist.
		</p>
		<a href="/" style="display: inline-block; padding: 0.75rem 1.5rem; background: var(--color-primary); color: white; text-decoration: none; border-radius: 0.5rem;">
			Return to Home
		</a>
	</div>
</Layout>

<style>
	:global(body) {
		background-color: var(--color-bg);
	}
</style>
